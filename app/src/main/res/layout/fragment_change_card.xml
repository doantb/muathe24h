<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/action_bar_margin_left"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/huge_padding"
                    android:src="@drawable/ic_pay"
                    />
                <TextView
                    android:id="@+id/txt_title_change_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/action_bar_margin_left"
                    android:layout_marginTop="@dimen/huge_padding_custom"
                    android:text="Mua mã thẻ cào Online"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rclChangeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_title"
                ></android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:id="@+id/ll_sp_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rclChangeCard"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/txt_chose_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/action_bar_margin_left"
                    android:text="Chọn mệnh giá"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    />
                <Spinner
                    android:id="@+id/spChosePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/action_bar_height"
                    ></Spinner>
            </LinearLayout>
            <EditText
                android:id="@+id/edt_number_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_sp_price"
                android:layout_marginLeft="@dimen/edt_padding_login"
                android:layout_marginRight="@dimen/edt_padding_login"
                android:layout_marginTop="@dimen/large_margin"
                android:background="@drawable/bg_gray"
                android:hint="Số lượng thẻ cần mua"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLines="1"
                android:paddingBottom="@dimen/normal_padding"
                android:paddingLeft="@dimen/large_padding"
                android:paddingRight="@dimen/normal_padding"
                android:paddingTop="@dimen/normal_padding"
                android:textColorHint="@android:color/darker_gray"
                />
            <Spinner
                android:id="@+id/spChoseMethod"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/action_bar_height"
                android:layout_below="@+id/edt_number_card"
                ></Spinner>
            <Button
                android:id="@+id/btn_buy_card"
                android:layout_width="@dimen/width_button_login"
                android:layout_height="wrap_content"
                android:layout_below="@id/spChoseMethod"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/huge_padding"
                android:background="@drawable/bg_button_primary"
                android:text="Mua thẻ ngay"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>