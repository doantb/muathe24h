<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_main_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >
    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/image_logo"
        android:layout_height="@dimen/image_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/large_margin"
        android:src="@drawable/logo"
        />

    <EditText
        android:id="@+id/edt_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_icon"
        android:layout_marginLeft="@dimen/edt_padding_login"
        android:layout_marginRight="@dimen/edt_padding_login"
        android:layout_marginTop="@dimen/large_margin"
        android:background="@drawable/bg_tranferent"
        android:drawableRight="@drawable/ic_email"
        android:hint="Email"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingBottom="@dimen/normal_padding"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/normal_padding"
        android:paddingTop="@dimen/normal_padding"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_user_name"
        android:layout_marginLeft="@dimen/edt_padding_login"
        android:layout_marginRight="@dimen/edt_padding_login"
        android:layout_marginTop="@dimen/large_margin"
        android:background="@drawable/bg_tranferent"
        android:drawableRight="@drawable/ic_lock"
        android:hint="PassWord"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingBottom="@dimen/normal_padding"
        android:paddingLeft="@dimen/large_padding"
        android:paddingRight="@dimen/normal_padding"
        android:paddingTop="@dimen/normal_padding"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/width_button_login"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/huge_padding"
        android:background="@drawable/bg_tranferent_button"
        android:text="@string/login"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txt_login_forget_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="@dimen/large_radius"
        android:gravity="center"
        android:text="Forget Your Password?"
        android:textSize="15sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txt_login_with"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_register_now"
        android:layout_marginTop="@dimen/action_bar_ic"
        android:gravity="center"
        android:text="- OR LOGIN WITH -"
        />
    <LinearLayout
        android:id="@+id/ll_register_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_login_forget_pass"
        android:layout_marginTop="@dimen/large_margin"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_register_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't Have an Account?"
            android:textSize="15sp"
            />
        <TextView
            android:layout_marginLeft="@dimen/common_radius"
            android:id="@+id/txt_register_now_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Now"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/txt_login_with"
        android:layout_marginTop="@dimen/huge_padding"
        >
        <LinearLayout
            android:id="@+id/ll_login_with"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_google"
                android:id="@+id/img_login_gg"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#a5a1a1"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_margin"
                android:layout_marginRight="@dimen/large_margin"
                android:layout_weight="1"
                android:id="@+id/img_login_fb"
                android:src="@drawable/ic_facebook"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#a5a1a1"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_twit"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>